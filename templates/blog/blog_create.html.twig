{% extends "base.html.twig" %}

{% block title %}
    BlogSymfony | Nouvel article

    {% if editMode %}
        Modification de l'article
    {% else %}
        Nouvel article
    {% endif %}

{% endblock %}


{% block body %}

    <h1 class="text-center my-5">
    {# Si editMode renvoie TRUE, cela veut dire que l'article possède un ID, c'est une modification #}
    {% if editMode %}
      Modification de l'article
    {% else %}
    {# Si l'article ne possède pas d'id, c'est une insertion #}
      Nouvel article
    {% endif %}
    </h1>

