{# 2ème version du formulaire #}

{# formArticle ne sort pas de nulle part, c'est le résultat de createView(), c'est ce que le controller a transmis au template, il contient tous les champs du formulaire  #}
{# form_start(), form_end() : fonctions twig permettant de mettre en forme et d'afficher le formulaire #}

{{ form_start(formArticle) }}

    {{ form_row(formArticle.titre) }}

    {{ form_row(formArticle.contenu) }}

    {{ form_row(formArticle.photo) }}


    {# Si photoActuelle retourne TRUE, cela veut dire que l'article possède une photo, c'est une modification, alors on entre dans la condition IF et on affice la photo actuelle de l'article #}
    {% if photoActuelle %}
      <em>Vous pouvez uploader une nouvelle photo si vous souhaitez la modifier</em>
      <p class="col-2">
          <img src="{{ asset('upload/photos/' ~ photoActuelle) }}" alt="" class="col-12 img-responsive">
      </p>
    {% endif %}
    <button type="submit" class="btn btn-dark btn-blog mb-5 ">

         {% if editMode %}
          Enregistrer les modifications
          {% else %}

          Enregistrer
          {% endif %}
       {{ form_end(formArticle) }}

{% endblock %}
